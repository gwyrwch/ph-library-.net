@using Microsoft.AspNetCore.Mvc.Localization
@* @model TModel *@
@inject IViewLocalizer Localizer
<!-- Navbar -->
  <nav class="navbar navbar-expand-lg fixed-top navbar-transparent " color-on-scroll="300">
    <div class="container">
      <div class="navbar-translate">
        <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-bar bar1"></span>
          <span class="navbar-toggler-bar bar2"></span>
          <span class="navbar-toggler-bar bar3"></span>
          <span class="navbar-toggler-bar bar4"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="navigation">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a asp-action="Feed" class="nav-link"><i class="fa fa-paw"></i>@Localizer["Feed"]</a>
          </li>
          <li class="nav-item">
            <a asp-action="Profile" class="nav-link"><i class="fa fa-user-circle-o"></i>@Localizer["Profile"]</a>
          </li>
          <li class="nav-item">
            <a asp-action="Settings" class="nav-link"><i class="fa fa-cog"></i>@Localizer["Settings"]</a>
          </li>
          <li class="nav-item">
            <a asp-action="CreatePost" class="nav-link"><i class="fa fa-plus-square-o"></i>@Localizer["New post"]</a>
          </li>
          <li class="nav-item">
            @* todo: refactor this with styles *@
            <form method="post" asp-controller="Home" asp-action="Logout">
              <input type="submit" class="nav-btn nav-link border-0" value="@Localizer["Logout"]">
            </form>
          </li>
          <li class="nav-item justify-content-end" style="padding-top: 11px">
            @await Html.PartialAsync("_SetLanguagePartial")
          </li>
        </ul>
      </div>
    </div>
  </nav>
<!-- End Navbar -->


